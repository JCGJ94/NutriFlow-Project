# ==============================================
# NutriFlow - Environment Variables Template
# ==============================================
# COPY THIS FILE TO .env.local AND FILL IN THE VALUES
# DO NOT COMMIT .env.local TO VERSION CONTROL

# ===== SUPABASE CONFIG =====
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key

# ⚠️ CRITICAL SECURITY WARNING ⚠️
# NEVER put the service_role key in a client-side (Next.js) environment variable.
# ONLY use it in the backend (NestJS) or Supabase Edge Functions.
SUPABASE_SERVICE_KEY=your-service-role-key-backend-only

# JWT SECRET (for verifying tokens in backend)
SUPABASE_JWT_SECRET=your-jwt-secret

# ===== FRONTEND (Next.js) =====
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
NEXT_PUBLIC_API_URL=http://localhost:3001

# ===== API Backend =====
API_PORT=3001
NODE_ENV=development

# ===== AI CONFIG =====
GEMINI_API_KEY=your-gemini-api-key
GOOGLE_DRIVE_FOLDER_ID=your-folder-id
NOTEBOOKLM_ID=your-notebook-id
NOTEBOOKLM_MCP_PATH=./path/to/mcp/server

# ===== PLAYWRIGHT CONFIG (For Browser Testing) =====
PLAYWRIGHT_BROWSERS_PATH=./bin/ms-playwright
